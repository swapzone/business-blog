{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}

    <!-- header-has-img -->

<div class="content">
    <div class="container">

        <!-- START: PAGE CONTENT -->
        <div class="row animate-up">
            <div class="col-sm-12">
                <main class="post-single">
                    <article class="post-content section-box">
                        <div class="post-inner">
                            <header class="post-header">
                                <div class="post-data">
                                    <div class="post-tag">
                                        {{tags prefix="#"}}
                                    </div>

                                    <div class="post-title-wrap">
                                        <h1 class="post-title">{{title}}</h1>
                                        <time class="post-datetime" datetime="{{date format='YYYY-MM-DD'}}">
                                            <span class="day">{{date format="DD"}}</span>
                                            <span class="month" style="text-transform: uppercase;">{{date format="MMM"}}</span>
                                        </time>
                                    </div>

                                    <div class="post-info">
                                        <i class="icon icon-user"></i>by <a href="/author/{{author.slug}}">{{author.name}}</a>
                                    </div>
                                </div>
                            </header>

                            <div class="post-editor clearfix">
                               {{content}}
                            </div>

                            <footer class="post-footer">
                                <div class="post-share">
                                    <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-503b5cbf65c3f4d8" async="async"></script>
                                    <div class="addthis_sharing_toolbox"></div>
                                </div>
                            </footer>
                        </div><!-- .post-inner -->
                    </article>
                </main>
                <!-- .post-single -->
            </div>
        </div><!-- .row -->
        <span id="post-id" style="display: none">{{ id }}</span>
        <!-- END: PAGE CONTENT -->

    </div><!-- .container -->
</div><!-- .content -->

{{/post}}